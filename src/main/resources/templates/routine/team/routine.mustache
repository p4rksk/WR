    // ë‹¬ë ¥ JS
    let currentDate = new Date();
    function renderCalendar(year, month) {
      const calendar = document.getElementById("calendar-body");
      const monthLabel = document.getElementById("currentMonth");
      calendar.innerHTML = "";
      const firstDay = new Date(year, month, 1);
      const startDay = firstDay.getDay();
      const lastDate = new Date(year, month + 1, 0).getDate();
      monthLabel.innerText = `${year}ë…„ ${month + 1}ì›”`;

      for (let i = 0; i < startDay; i++) {
        calendar.innerHTML += `<div class="calendar-cell"></div>`;
      }
      for (let d = 1; d <= lastDate; d++) {
        const fullDate = `${year}-${String(month + 1).padStart(2, '0')}-${String(d).padStart(2, '0')}`;
        const hasRoutine = routinList[fullDate];
        calendar.innerHTML += `
          <div class="calendar-cell ${hasRoutine ? 'has-routine' : ''}" onclick="showRoutines('${fullDate}')">
            <div>${d}</div>
            ${hasRoutine ? '<div class="dot">â—</div>' : ''}
          </div>
        `;
      }
    }

    // ë‹¬ë ¥ ë‚ ì§œ ë³€ê²½ JS
    function changeMonth(offset) {
      currentDate.setMonth(currentDate.getMonth() + offset);
      renderCalendar(currentDate.getFullYear(), currentDate.getMonth());
    }

   

    // ë£¨í‹´ ëª©ë¡ JS
    function showRoutines(date) {
    const routines = routinList[date] || [];

    document.getElementById("checkDate").innerText = `${date} ë£¨í‹´ (${routines.length}ê°œ)`;

    const list = routines.map((r, i) => `
      <li onclick="goToDetail('${date}', ${i})" style="cursor: pointer;">
        <strong>ë°•ì„ ê·œ:</strong>   <strong>${r.title}</strong> <small class="text-muted">(${r.category})</small>
      </li>
    `).join('\n'); 

    document.getElementById("routine-list").innerHTML = `<ul>${list || '<li>ë£¨í‹´ ì—†ìŒ</li>'}</ul>`;

    new bootstrap.Modal(document.getElementById('routine-list-modal')).show();
