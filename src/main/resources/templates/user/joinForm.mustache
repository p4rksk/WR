<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>회원가입</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f4fff5;
        font-family: "Segoe UI", sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }
      .signup-box {
        width: 100%;
        max-width: 480px;
        background-color: white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.06);
      }
      .btn-kakao {
        background-color: #fee500;
        color: #000;
        font-weight: 600;
        border: 1px solid #e0c000;
        margin-bottom: 1rem;
      }
      .btn-kakao img {
        height: 20px;
        margin-right: 6px;
      }
      .form-text {
        font-size: 0.85rem;
      }
    </style>
  </head>
  <body>
    <div class="signup-box">
      <h3 class="text-center mb-4">회원가입</h3>
      <form id="signupForm">
        <div class="mb-3">
          <label class="form-label">아이디</label>
          <input type="text" class="form-control" id="nameInput" placeholder="아이디를 입력하세요" required />
          <div class="form-text" id="nameHint"></div>
        </div>
        <div class="mb-3">
          <label class="form-label">이메일</label>
          <input type="email" class="form-control" id="emailInput" placeholder="example@email.com" required />    
          <div class="form-text" id="emailHint"></div>
        </div>
        <div class="mb-3">
          <label class="form-label">비밀번호</label>
          <input type="password" class="form-control" id="passwordInput" placeholder="8자 이상" required />
          <div class="form-text" id="passwordHint"></div>
        </div>
        <div class="mb-3">
          <label class="form-label">전화번호</label>
          <input type="tel" class="form-control" id="phoneInput" placeholder="010-1234-5678" />
        </div>
        <div class="mb-3">
          <label class="form-label">생년월일</label>
          <input type="date" class="form-control" id="birthInput" />
        </div>
        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" id="agreeCheck" required />
          <label class="form-check-label">이용약관 및 개인정보 처리방침에 동의합니다.</label>
        </div>
        <div class="d-grid">
          <button type="submit" class="btn btn-success">가입하기</button>
        </div>
      </form>
    </div>

    <script>
      // keyup 유효성 검사
      document.getElementById("nameInput").addEventListener("keyup", (e) => {
        const hint = document.getElementById("nameHint");
        if (e.target.value.length < 2) {
          hint.innerText = "이름은 2자 이상이어야 합니다.";
          hint.style.color = "red";
        } else {
          hint.innerText = "사용 가능한 이름입니다.";
          hint.style.color = "green";
        }
      });

      document.getElementById("emailInput").addEventListener("keyup", (e) => {
        const hint = document.getElementById("emailHint");
        const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!regex.test(e.target.value)) {
          hint.innerText = "올바른 이메일 형식이 아닙니다.";
          hint.style.color = "red";
        } else {
          hint.innerText = "사용 가능한 이메일입니다.";
          hint.style.color = "green";
        }
      });

      document
        .getElementById("passwordInput")
        .addEventListener("keyup", (e) => {
          const hint = document.getElementById("passwordHint");
          if (e.target.value.length < 8) {
            hint.innerText = "비밀번호는 8자 이상이어야 합니다.";
            hint.style.color = "red";
          } else {
            hint.innerText = "사용 가능한 비밀번호입니다.";
            hint.style.color = "green";
          }
        });
    </script>
  </body>
</html>
